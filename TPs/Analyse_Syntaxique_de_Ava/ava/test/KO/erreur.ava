-- programme erreur syntaxique
program "erreur";
   int x, xbis;
   boolean fini;
   int res;
   float f;

   write (%s, "entrer un entier positif\n","erreur");
   read x;
   xbis := x; -- memorisation de x
   res := 1;  -- r√©sultat
   fini := x = 1 ;
   if x /= 0 then
      while not fini while loop
          res := res * x;
          x := x - 1 ;
          fini := x = 1;
     end  if ;
  endloop;
  write(%s,"factorielle(" );
  write(%i,xbis);
  write(%s, ")=");write(%i,res);
  writeln;

